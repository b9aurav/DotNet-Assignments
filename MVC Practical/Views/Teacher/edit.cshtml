@model MVC_Practical.Models.Teacher

<form method="post" asp-action="Edit">
    <input hidden asp-for="Id"/>
    <div class="border p-3 bg-white">
        @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
        <div class="form-group row">
            <h2 class="text-info pl-3">Edit Teacher</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="joinDate">Join Date</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="joinDate"  class="form-control" />
                        <span asp-validation-for="joinDate" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="birthDate">Birth Date</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="birthDate" class="form-control" />
                        <span asp-validation-for="birthDate" class="text-danger"></span>
                    </div>

                </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>
    <input type="submit" value="Submit" name="submit" asp-controller="Teacher" asp-action="edit">
</form>


@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }

}


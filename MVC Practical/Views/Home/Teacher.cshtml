@model IEnumerable<MVC_Practical.Models.Teacher>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-8">
            <h2 class="text-primary">Teachers</h2>
        </div>
        Add New Subject
    </div>
    <br />
    @if (Model.Count() > 1)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Joined Date</th>
                    <th>Birth Date</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj1 in Model) {
                    <tr>
                        <td width="50%">@obj1.Id</td>
                        <td>@obj1.Name</td>
                        <td>@obj1.joinDate</td>
                        <td>@obj1.birthDate</td>
                        <td>
                           <a asp-controller="Subject" asp-action="Edit" asp-route-subjectid="@obj1.Id" class="btn btn-primary">Edit</a>
                            <a asp-controller="Subject" asp-action="Delete" asp-route-subjectid="@obj1.Id" class="btn btn-primary">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No subject details.</p>
    }
</div>

